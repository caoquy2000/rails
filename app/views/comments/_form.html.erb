<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %> <br>
    <%= form.text_field :commenter %>
  </p>

  <p>
    <%= form.label :body %> <br>
    <%= form.text_field :body %>
  </p>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public' %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>